<div class="book-wrap">
<% @books.each do |book| %>
  <div class="book-box">
    <table> 
      <tr>
        <td><span class="book-body"><%= book.body %></span></td>
        <td><span class="book-title"><%=link_to book.title, book_path(book.id) %></span></td>
      </tr>
    </table>
  </div>
<% end %>
</div>

<h2>New book</h2>

<%= form_with model: @book, url: '/book', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
	<h4></h4>
  <%= f.submit 'Create Book' %>
<% end %>
